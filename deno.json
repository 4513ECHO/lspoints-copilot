{
  "compilerOptions": {
    "noUncheckedIndexedAccess": true
  },
  "exclude": [
    "dist/**/*"
  ],
  "lint": {
    "rules": {
      "include": [
        "eqeqeq",
        "explicit-function-return-type",
        "no-await-in-loop"
      ]
    }
  },
  "lock": false,
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts"
  }
}
