{
  "compilerOptions": {
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true
  },
  "exclude": [
    "dist/**/*"
  ],
  "lint": {
    "rules": {
      "include": [
        "eqeqeq",
        "explicit-function-return-type"
      ]
    }
  },
  "lock": false,
  "tasks": {
    "lint": "deno fmt --check && deno lint && deno check **/*.ts"
  }
}
